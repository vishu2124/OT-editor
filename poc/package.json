{
  "name": "confluence-clone-poc",
  "version": "1.0.0",
  "description": "POC for Confluence-like collaborative document editing",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/index.js",
    "client:dev": "cd client && npm start",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "install:all": "npm install && cd client && npm install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "cors": "^2.8.5",
    "uuid": "^9.0.0",
    "fs-extra": "^11.1.1",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0",
    "@types/node": "^20.4.5",
    "typescript": "^5.1.6"
  },
  "keywords": [
    "collaborative-editing",
    "real-time",
    "websocket",
    "typescript",
    "react"
  ],
  "author": "Confluence Clone Team",
  "license": "MIT"
}
